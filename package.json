{
  "name": "carbon-sdk",
  "version": "0.0.1",
  "description": "TypeScript SDK for Carbon blockchain",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/Switcheo/carbon-sdk",
  "author": "Switcheo <engineering@switcheo.network>",
  "license": "MIT",
  "scripts": {
    "watch": "nodemon yarn build",
    "build": "tsc && tsc-alias",
    "cp-proto": "cp ~/go/src/github.com/Switcheo/carbon/gen/proto-ts.tar.gz .",
    "sync-proto": "sh scripts/update-proto.sh",
    "test": "tsc && node lib/test.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run lint",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags",
    "ws": "^7.4.6"
  },
  "nodemonConfig": {
    "delay": 500,
    "ext": "ts, css, js, json",
    "watch": [
      "./src",
      "./package.json"
    ]
  },
  "files": [
    "lib/**/*",
    "examples/**/*"
  ],
  "dependencies": {
    "@cosmjs/proto-signing": "^0.25.4",
    "@cosmjs/stargate": "^0.25.4",
    "@grpc/grpc-js": "^1.3.2",
    "@keplr-wallet/types": "^0.9.0-alpha.10",
    "@ledgerhq/hw-transport": "^6.3.0",
    "@ledgerhq/hw-transport-webhid": "^6.4.1",
    "@ledgerhq/hw-transport-webusb": "^6.3.0",
    "@types/ripemd160": "^2.0.0",
    "@types/w3c-web-hid": "^1.0.2",
    "@types/w3c-web-usb": "^1.0.5",
    "@types/ws": "^7.4.7",
    "base58check": "^2.0.0",
    "bignumber.js": "^9.0.1",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "dayjs": "^1.10.5",
    "ethers": "^5.3.0",
    "ledger-cosmos-js": "^2.1.8",
    "node-fetch": "^2.6.1",
    "ripemd160": "^2.0.2",
    "secp256k1": "^4.0.2",
    "secp256r1": "^0.0.3",
    "tsc-alias": "^1.2.11",
    "typescript": "^4.3.5",
    "wif": "^2.0.6",
    "eth-sig-util": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^15.6.2",
    "@types/node-fetch": "^2.5.12",
    "@types/secp256k1": "^4.0.2",
    "@types/wif": "^2.0.2",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.12",
    "ts-proto": "^1.81.1"
  }
}
